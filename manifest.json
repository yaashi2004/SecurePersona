{
  "manifest_version": 3,
  "name": "SecurePersona",
  "version": "1.0.0",
  "description": "Secure Auto Form Filler - Streamline and secure your form filling experience",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SecurePersona",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      
      "48": "assets/icons/icon48.png"
      
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "assets/icons/icon16.png",
    
    "48": "assets/icons/icon48.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/animations/*"],
      "matches": ["<all_urls>"]
    }
  ]
}